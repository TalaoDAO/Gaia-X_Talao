        "vp_token": {
            "presentation_definition": {
                "id": "pass_for_gaiax",
                "input_descriptors": [
                    {
                        "id": "ParticipantCredential issued by Talao",
                        "purpose" : "Test for Gaia-X hackathon",
                        "format" : {
                            "ldp_vc": {
                                "proof_type": [
                                                "JsonWebSignature2020"
